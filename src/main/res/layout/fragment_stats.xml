<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="URLs Checked:"
        android:id="@+id/statsCheckedLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Possibly Censored:"
        android:id="@+id/censoredLabel"
        android:layout_below="@+id/statsCheckedLabel"
        android:layout_alignLeft="@+id/statsCheckedLabel"
        android:paddingTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/censoredCount"
        android:layout_alignBottom="@+id/censoredLabel"
        android:layout_toRightOf="@+id/censoredLabel"
        android:paddingLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/checkedCount"
        android:layout_above="@+id/censoredLabel"
        android:layout_toRightOf="@+id/statsCheckedLabel"
        android:paddingLeft="20dp" />
</RelativeLayout>